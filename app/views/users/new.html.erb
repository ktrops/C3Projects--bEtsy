<h1>Create an Account</h1>

<% if flash.now[:errors] %>
  <div>
    <p class="alert alert-danger">
      <%= flash.now[:errors] %>
    </p>
  </div>
<% end %>

<% if flash[:success] %>
  <div>
    <p class="alert alert-success">
      <%= flash[:success] %>
    </p>
  </div>
<% end %>
<br>
<p>NOTE: Currently only servicing within the United States of America</p>

<%= form_for @new_user, html: { class: "form" } do |f| %>
  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, required: true, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, required: true, autofocus: true, class: "form-control" %>
  </div>

  <%= f.hidden_field :country, :value => "US" %>

  <div class="form-group">
    <%= f.label :state %>
    <%= f.select :state, Order::US_STATES, { include_blank: true }, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :zip %>
    <%= f.text_field :zip, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confriamtion, class: "form-control" %>
  </div>

  <%= f.submit "Register", class: "btn btn-primary" %>
<% end %>
